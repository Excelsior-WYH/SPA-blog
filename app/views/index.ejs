    <script type="text/template" id="T_Index">
        <section id="articles">
            <% articles.forEach(function (article, index) { %>
                <article>
                    <a href=""><h2 data-id="<%= article._id %>"><%= article.title %></h2></a>
                    <p><%= article.content %></p>
                    <div>
                        <span>
                            <i class="iconfont">&#xe610;</i>
                            <b>
                                <%= 
                                    GetLunarDay(new Date(article.postDate).getFullYear(), new Date(article.postDate).getMonth() + 1, new Date(article.postDate).getDay())
                                %>
                             </b>
                        </span>
                        <span>
                            <i class="iconfont">&#xe600;</i>
                            <b>10</b>
                        </span>
                        <span class="comment" data-id="<%= article._id %>">
                            <i class="iconfont">&#xe602;</i>
                            <b>10</b>
                        </span>
                        <span class="praise" data-id="<%= article._id %>">
                            <i class="iconfont">&#xe601;</i>
                            <b><%= article.praiseCount %></b>
                        </span>
                    </div>
                </article>
            <%  }); %>
        </section>
    </script>
    

    <script type="text/template" id="T_ArticleDetail">
        <div id="article">
            <article>
                <a href=""><h2 data-id="<%= article._id %>"><%= article.title %></h2></a>
                <p><%= article.content %></p>
                <div>
                    <span>
                        <i class="iconfont">&#xe610;</i>
                        <b>2014-12-23</b>
                    </span>
                    <span>
                        <i class="iconfont">&#xe600;</i>
                        <b>10</b>
                    </span>
                    <span class="comment" data-id="<%= article._id %>">
                        <i class="iconfont">&#xe602;</i>
                        <b>10</b>
                    </span>
                    <span class="praise" data-id="<%= article._id %>">
                        <i class="iconfont">&#xe601;</i>
                        <b><%= article.praiseCount %></b>
                    </span>
                </div>
            </article>

            <div class="duoshuoCommentForm">
                <div class="ds-thread" data-thread-key="<%= article._id %>" data-title="<%= article.title %>" data-url="http://127.0.0.1:3000/#detail/<%= article._id %>">
                </div>
            
                <div class="ds-recent-comments" data-num-items="5" data-show-avatars="1" data-show-time="1" data-show-title="1" data-show-admin="1" data-excerpt-length="70">
                </div>
            </div>
       </div>
        
    </script>

