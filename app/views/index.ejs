    <script type="text/template" id="T_Index">
        <% articles.forEach(function (article, index) { %>
            <article>
                <a href="#detail/<%= article._id %>"><h2 data-id="<%= article._id %>"><%= article.title %></h2></a>
                <p><%= article.content %></p>
                <div>
                    <span>
                        <i class="iconfont">&#xe610;</i>
                        <b>
                            <%= 
                                GetLunarDay(new Date(article.postDate).getFullYear(), new Date(article.postDate).getMonth() + 1, new Date(article.postDate).getDay())
                            %>
                         </b>
                    </span>
                    <span>
                        <i class="iconfont">&#xe600;</i>
                        <b>10</b>
                    </span>
                    <span class="comment">
                        <i class="iconfont">&#xe602;</i>
                        <b>10</b>
                    </span>
                    <span class="praise">
                        <i class="iconfont">&#xe601;</i>
                        <b><%= article.praiseCount %></b>
                    </span>
                </div>
            </article>
        <%  }); %>
    </script>
    

    <script type="text/template" id="T_ArticleDetail">
        <section>
            <article>
                <a href=""><h2 data-id="<%= article._id %>"><%= article.title %></h2></a>
                <p><%= article.content %></p>
                <div>
                    <span>
                        <i class="iconfont">&#xe610;</i>
                        <b>2014-12-23</b>
                    </span>
                    <span>
                        <i class="iconfont">&#xe600;</i>
                        <b>10</b>
                    </span>
                    <span class="articleCommentBtn" data-id="<%= article._id %>">
                        <i class="iconfont">&#xe602;</i>
                        <b>10</b>
                    </span>
                    <span class="praise" data-id="<%= article._id %>">
                        <i class="iconfont">&#xe601;</i>
                        <b><%= article.praiseCount %></b>
                    </span>
                </div>
            </article>
        </section>

        <button class="commentFormShowBtn">dsd</button>

        <div id="duoshuoCommentForm"></div>
    </script>


